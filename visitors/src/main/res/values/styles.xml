<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
    </style>

    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="edit_text_style">
        <item name="android:padding">@dimen/registration_margin</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:layout_marginLeft">@dimen/registration_edittext_margin</item>
        <item name="android:layout_marginRight">@dimen/registration_edittext_margin</item>
        <!--<item name="android:background">@drawable/edit_text</item>-->
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_marginLeft">@dimen/schedule_title_size</item>
        <item name="android:layout_marginRight">@dimen/schedule_title_size</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/font_size</item>
    </style>


</resources>
