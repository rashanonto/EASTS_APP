<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/llBackground"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.dynamicobjx.visitorapp.activities.AboutUsActivity">

    <TextView
        android:id="@+id/tvEvent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:background="@drawable/worldbex_logo"
        android:textColor="@color/about_us"
        android:textSize="@dimen/about_us_header"/>

    <TextView
        android:id="@+id/tvEventDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColor="@color/about_us"
        android:textSize="@dimen/about_us_body"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvAboutBody"
            android:layout_width="match_parent"
            android:textColor="@color/about_us"
            android:layout_height="wrap_content"
            android:textSize="@dimen/about_us_body"
            android:paddingRight="10dp"/>
    </ScrollView>

</LinearLayout>